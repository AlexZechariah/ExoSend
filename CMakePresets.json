{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-msvc-base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_PREFIX_PATH": "$env{QT_ROOT_DIR}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "windows",
      "inherits": "windows-msvc-base",
      "displayName": "Windows (Ninja Multi-Config + MSVC)",
      "description": "Windows multi-config build using Ninja; supports Debug/Release via --config."
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "windows",
      "displayName": "Build Debug",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "windows",
      "displayName": "Build Release",
      "configuration": "Release"
    }
  ]
}
